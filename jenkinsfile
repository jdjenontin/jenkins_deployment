pipeline {
    agent any
    stages{
        stage('Ping') {
            steps {
                sh 'ls'
            }
        }
        stage('Build') {
            steps {
                script {
                    sshagent(credentials: ['Uriel']){
                    sh '''
                        ssh uriel@192.168.1.12 "docker pull nginx && \
                        docker run --name test_nx -p 80:80 -d nginx"
                    '''
                    }
                }
            }
        }
    }
}
